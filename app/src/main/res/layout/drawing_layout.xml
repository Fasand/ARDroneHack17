<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<com.ed.inf1.ardronehack17.DrawingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:layout_weight="1"
    android:background="#FFFFFFFF"

    />

<Button
    android:visibility="gone"
android:id="@+id/start_fly_button"
android:text="Start fly!"
android:textSize="20sp"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/drawing"
    android:layout_alignStart="@+id/drawing" />

    <Button
    android:visibility="gone"
    android:id="@+id/try_again_button"
    android:text="Try again"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/start_fly_button"
        android:layout_alignBottom="@+id/start_fly_button"
        android:layout_alignEnd="@+id/drawing" />

</RelativeLayout>